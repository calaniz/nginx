[Unit]
Description=Nginx
After=etcd2.service

[Service]
ExecStartPre=-/usr/bin/docker pull calaniz/nginx
ExecStartPre=-/usr/bin/docker stop nginx
ExecStartPre=-/usr/bin/docker rm nginx
ExecStart=/usr/bin/docker run -v /etc/alanisoft/alanisoft.pem:/etc/ssl/certs/alanisoft.pem -v /etc/alanisoft/alanisoft.key:/etc/ssl/private/alanisoft.key --name nginx calaniz/nginx
ExecStop=/usr/bin/docker stop nginx
